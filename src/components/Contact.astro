---
import IGithub from "../assets/icons/IGithub.astro";
import ILinkedin from "../assets/icons/ILinkedin.astro";
import IMail from "../assets/icons/IMail.astro";
import SectionContainer from "./SectionContainer.astro";
---

<SectionContainer id="contact" title="Contact me">
  <div class="section">
    <div class="info">
      <p class="text">
        Feel free to contact me any time. I will get back to you as soon as I
        can!
      </p>
      <div class="info-info">
        <h3>Email</h3>
        <p>alexis@sanmiguel.dev</p>
      </div>
      <nav class="social-links">
        <a
          href="https://github.com/alexisstdev"
          target="_blank"
          aria-label="Alexis GitHub Profile"
        >
          <IGithub />
        </a>
        <a
          href="https://www.linkedin.com/in/sanmigueldev/"
          target="_blank"
          aria-label="Alexis LinkedIn Profile"
        >
          <ILinkedin />
        </a>
        <a href="mailto:alexis@sanmiguel.dev" aria-label="Email Alexis">
          <IMail />
        </a>
      </nav>
    </div>
    <form class="form" id="contact-form">
      <div class="form-group">
        <input type="text" name="user_name" placeholder="Name" required />
        <input type="email" name="user_email" placeholder="Email" required />
      </div>
      <textarea name="message" placeholder="Message" required></textarea>
      <button type="submit">Send</button>
    </form>
  </div>
</SectionContainer>

<style>
  .section {
    display: flex;
    gap: 4rem;
    align-items: center;
  }

  .social-links {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-top: 1rem;
  }

  .info {
    flex: 0.4;
  }

  .info > h2 {
    font-size: var(--text-xl);
  }

  .info > h3 {
    margin-bottom: 0;
  }

  .info-info > h3 {
    font-weight: 400;
    margin-top: 1rem;
    font-size: var(--text-sm);
  }

  .info-info > p {
    color: var(--text-secondary);
    margin-top: 0.3rem;
    font-size: var(--text-sm);
  }
  .text {
    font-size: var(--text-sm);
  }

  .form {
    flex: 0.6;
    display: flex;
    flex-direction: column;
    gap: 1.3rem;
  }

  .form-group {
    width: 100%;
    display: flex;
    gap: 1.3rem;
  }

  input,
  textarea {
    width: 100%;
    padding-inline: 1rem;
    padding-block: 0.5rem;
    font-size: var(--text-sm);
    border-radius: 0.6rem;
    border: none;
    background-color: var(--dark-secondary);
    color: var(--text-secondary);
    resize: none;
    font-family: var(--font-family);
  }

  input::placeholder,
  textarea::placeholder {
    color: rgba(255, 255, 255, 0.432);
  }

  input:focus,
  textarea:focus {
    outline: 1px solid rgba(255, 255, 255, 0.5);
  }

  textarea {
    height: 9rem;
  }

  button[type="submit"] {
    background-color: var(--accent-color);
    color: var(--bgcolor);
    border: none;
    border-radius: 7px;
    width: 100%;
    padding-block: 0.8rem;
    cursor: pointer;
    transition: all 0.3s ease;
    font-weight: 600;
    background-color: var(--accent-color);
    color: var(--bgcolor);
  }

  button[type="submit"]:hover {
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    opacity: 0.85;
  }

  @media screen and (max-width: 768px) {
    .section {
      flex-direction: column;
      gap: 1rem;
    }
    .form {
      width: 100%;
    }
    .info {
      width: 100%;
    }
    .form-group {
      flex-direction: column;
    }
  }
</style>

<script>
  import { handleFormSubmit } from "../utils/utils";

  handleFormSubmit();
</script>
