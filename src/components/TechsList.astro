---
interface Props {
  title: string;
  items: Array<{
    title: string;
    icon: string;
  }>;
}

const { title, items } = Astro.props;
---

<div class="tech-section">
  <h3>{title}</h3>
  <div class="tech-grid">
    {
      items.map((tech) => (
        <div class="tech-item">
          <img src={tech.icon} alt={tech.title} />
          <p>{tech.title}</p>
        </div>
      ))
    }
  </div>
</div>

<style>
  .tech-section h3 {
    color: var(--text-primary);
    margin-bottom: 1rem;
    font-size: var(--text-base);
  }

  .tech-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 0.3rem;
  }

  .tech-item {
    padding: 0.5rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.3rem;
  }

  .tech-item img {
    height: 4rem;
    margin-left: 1rem;
  }

  @media (max-width: 768px) {
    .tech-grid {
      gap: 0.75rem;
    }

    .tech-item img {
      height: 24px;
    }
  }
</style>
